<Application
    x:Class="RozkładJazdyv2.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RozkładJazdyv2.Pages.Lines"
    RequestedTheme="Dark">

    <Application.Resources>

        <DataTemplate x:Key="LineDataTemplate">
            <local:LineUserControl DataContext="{Binding}" />
        </DataTemplate>

        <ItemsPanelTemplate x:Key="LinesGridViewItemPanelTemplate">
            <ItemsWrapGrid Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
        </ItemsPanelTemplate>
        
    </Application.Resources>
</Application>
