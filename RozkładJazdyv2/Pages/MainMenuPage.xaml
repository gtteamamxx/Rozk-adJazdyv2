<Page
    x:Class="RozkładJazdyv2.Pages.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttons="using:RozkładJazdyv2.Model.MainMenu"
    xmlns:app="using:RozkładJazdyv2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid Name="MainGrid" 
          Background="Black">
        <ScrollViewer>
            <Grid>
                <GridView Name="ButtonListGridView"
                          HorizontalContentAlignment="Center"
                          Margin="0 0 0 25"
                          VerticalContentAlignment="Center" 
                          ContainerContentChanging="ButtonListGridViewContentChanged" >
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="buttons:MainMenuButton">
                            <Grid Width="176"
                                  Height="176"
                                  Padding="10"
                                  Margin="20"
                                  BorderBrush="AliceBlue"
                                  BorderThickness="1">
                                <TextBlock Text="{x:Bind Header}"
                                           VerticalAlignment="Top"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           FontSize="21"
                                           FontWeight="SemiBold"
                                           Foreground="Black"/>
                                <TextBlock TextAlignment="Center"
                                           FontSize="45"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="{x:Bind Logo}"
                                           Foreground="White" />
                                <TextBlock Text="{x:Bind Description}"
                                           VerticalAlignment="Bottom"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Foreground="Black"
                                           FontSize="16"/>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <Viewbox VerticalAlignment="Bottom"
                         Stretch="UniformToFill"
                         StretchDirection="DownOnly">
                    <StackPanel Orientation="Horizontal">
                        <Button Foreground="White"
                                    Background="Transparent">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel>
                                        <TextBlock>
                                                <Run Foreground="LightSeaGreen"
                                                     Text="Rozkład jazdy KZKGOP | UWP" />
                                                <Run Text="&#x0a;Autor: Grzegorz Stanik&#x0a;Wersja: " />
                                                <Run Foreground="Yellow" Text="{x:Bind APP_VERSION}"/>
                                        </TextBlock>
                                        <HyperlinkButton Content="Kontakt: grs4_98@o2.pl" 
                                                         Margin="0 -8"
                                                         Foreground="Red"
                                                         NavigateUri="mailto:grs4_98@o2.pl" />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>

                            <Grid BorderBrush="White"
                                      BorderThickness="0 0 0 1">
                                <TextBlock Text="Autor"/>
                            </Grid>
                        </Button>

                        <Button Margin="10 0 0 0"
                                Background="Transparent"
                                Foreground="White" 
                                Click="RefreshTimetableButton_Click">
                            <Grid BorderBrush="White"
                                      BorderThickness="0 0 0 1">
                                <TextBlock Text="Odśwież rozkład"/>
                            </Grid>
                        </Button>
                        
                        <Button VerticalAlignment="Center"
                                Background="Transparent">
                            <TextBlock TextAlignment="Right"
                                       Foreground="White">
                                <Run Text="{x:Bind APP_VERSION}" />
                                <Run Text="&#x0a;"/>
                                <Run Text="Rozkład z dnia: "/>
                                <Run Text="{x:Bind TimetableLastUpdate}" />
                            </TextBlock>
                        </Button>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
