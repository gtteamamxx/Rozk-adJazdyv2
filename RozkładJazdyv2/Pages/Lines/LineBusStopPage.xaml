<Page
    x:Class="RozkładJazdyv2.Pages.Lines.LineBusStopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RozkładJazdyv2.Pages.Lines"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              VerticalAlignment="Top"
              Margin="20">
            <RelativePanel>
                <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="30"
                           Text="&#xEB4D;"
                           Margin="0 5"
                           Foreground="#FF959DD3"
                           x:Name="LineLogoTextBlock"/>
                <TextBlock VerticalAlignment="Center"
                           FontSize="30"
                           Foreground="White"
                           Text="722"
                           Margin="10 0 0 0"
                           RelativePanel.RightOf="LineLogoTextBlock"
                           x:Name="LineNumberTextBlock"/>
                <TextBlock VerticalAlignment="Bottom"
                           Margin="0 45 0 0"
                           TextWrapping="Wrap">
                        <Run Text="Rozkład: " />
                        <Run x:Name="LineScheduleNameTextBlock" />
                </TextBlock>
                <TextBlock VerticalAlignment="Bottom"
                           Margin="0 65 0 0"
                           TextWrapping="Wrap">
                    <Run Text="Przystanek: " />
                    <Run x:Name="LineBusStopNameTextBlock"
                         FontWeight="Bold"/>
                </TextBlock>
            </RelativePanel>
        </Grid>

        <Grid Grid.Row="1">
            
        </Grid>
    </Grid>
</Page>
